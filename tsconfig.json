{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonJs",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "./dist",
        "pretty": true,
        "rootDir": "./src",
        "sourceMap": false,
        "target": "ES2022"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".gitignore",
    ],
    "lib": [
        "ES2017"
    ]
}
